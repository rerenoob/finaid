{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FinaidDev;Trusted_Connection=true;TrustServerCertificate=true;",
    "Redis": "localhost:6379",
    "AzureStorage": "UseDevelopmentStorage=true"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "ClientId": "development-client-id",
    "TenantId": "development-tenant-id",
    "ClientSecret": "development-client-secret",
    "CallbackPath": "/signin-oidc"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "AzureOpenAI": {
    "Endpoint": "https://your-openai-resource.openai.azure.com/",
    "ApiKey": "your-development-api-key",
    "DeploymentName": "gpt-4",
    "ModelName": "gpt-4"
  },
  "FederalApi": {
    "BaseUrl": "https://api-dev.studentaid.gov/",
    "ApiKey": "development-api-key",
    "ClientId": "development-client-id",
    "ClientSecret": "development-client-secret"
  },
  "DocumentStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "documents-dev",
    "MaxFileSizeMB": 50,
    "AllowedFileTypes": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Environment": "Development",
  "Features": {
    "EnableAIAssistant": true,
    "EnableDocumentOCR": true,
    "EnableRealTimeUpdates": true,
    "EnablePushNotifications": false,
    "EnableOfflineMode": false
  },
  "Security": {
    "RequireHttps": false,
    "EnableDataProtection": true,
    "CookieSecurePolicy": "None",
    "ContentSecurityPolicy": "default-src 'self' 'unsafe-eval' 'unsafe-inline'; connect-src 'self' ws: wss:;"
  },
  "Cache": {
    "DefaultExpiration": "00:05:00",
    "SlidingExpiration": "00:02:00",
    "EnableDistributedCache": false
  }
}
