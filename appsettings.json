{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureOpenAI": {
    "Endpoint": "https://your-openai-resource.openai.azure.com",
    "ApiKey": "your-api-key-here",
    "DeploymentName": "gpt-4",
    "ModelName": "gpt-4",
    "MaxTokens": 4000,
    "Temperature": 0.3,
    "RequestsPerMinute": 60,
    "TokensPerMinute": 40000,
    "EnableStreaming": true,
    "EnableDetailedLogging": false
  },
  "DocumentStorage": {
    "ContainerName": "documents",
    "MaxFileSizeBytes": 52428800,
    "AllowedFileTypes": [".pdf", ".jpg", ".jpeg", ".png", ".tiff", ".tif"],
    "EnableVirusScanning": true,
    "EnableEncryption": true,
    "SasTokenExpiryHours": 24,
    "DocumentRetentionDays": 2555,
    "EnableAccessLogging": true
  },
  "FormRecognizer": {
    "Endpoint": "https://your-form-recognizer-resource.cognitiveservices.azure.com",
    "ApiKey": "your-form-recognizer-api-key",
    "ConfidenceThreshold": 0.7,
    "MaxProcessingTimeSeconds": 120,
    "MaxRetryAttempts": 3,
    "EnableCustomModels": false,
    "CustomModelsContainer": "",
    "EnableLogging": true,
    "LogRawResults": false,
    "ModelMappings": {
      "TaxReturn": "prebuilt-tax.us.1040",
      "W2Form": "prebuilt-tax.us.w2",
      "BankStatement": "prebuilt-document",
      "DriversLicense": "prebuilt-idDocument",
      "Passport": "prebuilt-idDocument"
    }
  }
}
