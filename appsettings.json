{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AWSBedrock": {
    "Region": "us-east-1",
    "AccessKeyId": "your-access-key-here",
    "SecretAccessKey": "your-secret-key-here",
    "ModelId": "anthropic.claude-3-sonnet-20240229-v1:0",
    "MaxTokens": 4000,
    "Temperature": 0.3,
    "EnableStreaming": true
  },
  "AWSS3": {
    "Region": "us-east-1",
    "AccessKeyId": "your-access-key-here",
    "SecretAccessKey": "your-secret-key-here",
    "BucketName": "finaid-documents",
    "MaxFileSizeBytes": 52428800,
    "AllowedFileTypes": [".pdf", ".jpg", ".jpeg", ".png", ".tiff", ".tif"],
    "EnableVirusScanning": true,
    "EnableEncryption": true,
    "PresignedUrlExpiryHours": 24,
    "DocumentRetentionDays": 2555,
    "EnableAccessLogging": true
  },
  "AWSTextract": {
    "Region": "us-east-1",
    "AccessKeyId": "your-access-key-here",
    "SecretAccessKey": "your-secret-key-here",
    "ConfidenceThreshold": 0.7,
    "MaxProcessingTimeSeconds": 120,
    "MaxRetryAttempts": 3,
    "EnableLogging": true,
    "LogRawResults": false,
    "ModelMappings": {
      "TaxReturn": "TAX_FORM",
      "W2Form": "W2_FORM",
      "BankStatement": "DOCUMENT",
      "DriversLicense": "ID_DOCUMENT",
      "Passport": "ID_DOCUMENT"
    }
  }
}
