{
  "ConnectionStrings": {
    "DefaultConnection": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/sql-connection-string/)",
    "Redis": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/redis-connection-string/)",
    "AzureStorage": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/storage-connection-string/)"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "ClientId": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/aad-client-id/)",
    "TenantId": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/aad-tenant-id/)",
    "ClientSecret": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/aad-client-secret/)",
    "CallbackPath": "/signin-oidc"
  },
  "ApplicationInsights": {
    "ConnectionString": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/appinsights-connection-string/)"
  },
  "AzureOpenAI": {
    "Endpoint": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/openai-endpoint/)",
    "ApiKey": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/openai-api-key/)",
    "DeploymentName": "gpt-4",
    "ModelName": "gpt-4"
  },
  "FederalApi": {
    "BaseUrl": "https://studentaid.gov/api/",
    "ApiKey": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/federal-api-key/)",
    "ClientId": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/federal-client-id/)",
    "ClientSecret": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/federal-client-secret/)"
  },
  "DocumentStorage": {
    "ConnectionString": "@Microsoft.KeyVault(SecretUri=https://kv-finaid-prod.vault.azure.net/secrets/storage-connection-string/)",
    "ContainerName": "documents",
    "MaxFileSizeMB": 50,
    "AllowedFileTypes": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "AllowedHosts": "*.azurewebsites.net,finaid.yourdomain.com",
  "Environment": "Production",
  "Features": {
    "EnableAIAssistant": true,
    "EnableDocumentOCR": true,
    "EnableRealTimeUpdates": true,
    "EnablePushNotifications": true,
    "EnableOfflineMode": true
  },
  "Security": {
    "RequireHttps": true,
    "EnableDataProtection": true,
    "CookieSecurePolicy": "Always",
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src 'self'; img-src 'self' data: blob:; connect-src 'self' wss: https:;"
  },
  "Cache": {
    "DefaultExpiration": "00:30:00",
    "SlidingExpiration": "00:15:00",
    "EnableDistributedCache": true
  }
}