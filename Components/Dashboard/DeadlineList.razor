@using finaid.Models.Dashboard

@*
    Shows upcoming deadlines with priority indicators
*@

<div class="deadline-list">
    @if (Deadlines?.Any() == true)
    {
        <div class="deadlines-container">
            @foreach (var deadline in Deadlines.OrderBy(d => d.DueDate).Take(MaxItems))
            {
                <div class="deadline-item @GetPriorityClass(deadline.Priority)">
                    <div class="deadline-indicator">
                        <div class="days-until @GetUrgencyClass(deadline.DaysUntilDue)">
                            @if (deadline.DaysUntilDue == 0)
                            {
                                <span class="today-label">Today</span>
                            }
                            else if (deadline.DaysUntilDue == 1)
                            {
                                <span class="days-number">1</span>
                                <span class="days-label">day</span>
                            }
                            else
                            {
                                <span class="days-number">@deadline.DaysUntilDue</span>
                                <span class="days-label">days</span>
                            }
                        </div>
                    </div>
                    
                    <div class="deadline-content">
                        <div class="deadline-header">
                            <h6 class="deadline-title">@deadline.Title</h6>
                            <span class="deadline-type badge bg-light text-dark">@deadline.ApplicationType</span>
                        </div>
                        
                        <p class="deadline-description">@deadline.Description</p>
                        
                        <div class="deadline-footer">
                            <span class="due-date">
                                <i class="bi bi-calendar3 me-1"></i>
                                Due @deadline.DueDate.ToString("MMM dd, yyyy")
                            </span>
                            
                            @if (!string.IsNullOrEmpty(deadline.ActionUrl))
                            {
                                <a href="@deadline.ActionUrl" class="btn btn-sm btn-outline-primary">
                                    Take Action <i class="bi bi-arrow-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        
        @if (Deadlines.Count > MaxItems)
        {
            <div class="show-more">
                <a href="/deadlines" class="btn btn-link btn-sm">
                    View all @Deadlines.Count deadlines <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        }
    }
    else
    {
        <div class="no-deadlines">
            <i class="bi bi-calendar-check display-6 text-success"></i>
            <h6 class="mt-2">No Upcoming Deadlines</h6>
            <p class="text-muted">You're all caught up!</p>
        </div>
    }
</div>

@code {
    [Parameter] public List<UpcomingDeadline>? Deadlines { get; set; }
    [Parameter] public int MaxItems { get; set; } = 5;
    
    private string GetPriorityClass(DeadlinePriority priority)
    {
        return priority switch
        {
            DeadlinePriority.Critical => "priority-critical",
            DeadlinePriority.High => "priority-high",
            DeadlinePriority.Medium => "priority-medium",
            DeadlinePriority.Low => "priority-low",
            _ => "priority-medium"
        };
    }
    
    private string GetUrgencyClass(int daysUntil)
    {
        return daysUntil switch
        {
            0 => "urgency-today",
            <= 3 => "urgency-critical",
            <= 7 => "urgency-high",
            <= 14 => "urgency-medium",
            _ => "urgency-normal"
        };
    }
}

<style>
    .deadlines-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    .deadline-item {
        display: flex;
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: #fff;
        border-left: 4px solid #e9ecef;
        transition: all 0.15s ease-in-out;
    }
    
    .deadline-item:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .deadline-item.priority-critical {
        border-left-color: #dc3545;
        background-color: rgba(220, 53, 69, 0.02);
    }
    
    .deadline-item.priority-high {
        border-left-color: #fd7e14;
        background-color: rgba(253, 126, 20, 0.02);
    }
    
    .deadline-item.priority-medium {
        border-left-color: #ffc107;
        background-color: rgba(255, 193, 7, 0.02);
    }
    
    .deadline-item.priority-low {
        border-left-color: #198754;
        background-color: rgba(25, 135, 84, 0.02);
    }
    
    .deadline-indicator {
        flex-shrink: 0;
        margin-right: 1rem;
        display: flex;
        align-items: center;
    }
    
    .days-until {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        border: 2px solid #e9ecef;
        background-color: #fff;
    }
    
    .days-until.urgency-today {
        background-color: #dc3545;
        color: white;
        border-color: #dc3545;
        animation: pulse 2s infinite;
    }
    
    .days-until.urgency-critical {
        background-color: #fd7e14;
        color: white;
        border-color: #fd7e14;
    }
    
    .days-until.urgency-high {
        background-color: #ffc107;
        color: #000;
        border-color: #ffc107;
    }
    
    .days-until.urgency-medium {
        background-color: #0dcaf0;
        color: #000;
        border-color: #0dcaf0;
    }
    
    .days-until.urgency-normal {
        background-color: #f8f9fa;
        color: #495057;
    }
    
    .days-number {
        font-size: 1.1rem;
        line-height: 1;
    }
    
    .days-label {
        font-size: 0.7rem;
        line-height: 1;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .today-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .deadline-content {
        flex-grow: 1;
        min-width: 0;
    }
    
    .deadline-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }
    
    .deadline-title {
        margin-bottom: 0;
        font-weight: 600;
        color: #495057;
        flex-grow: 1;
        margin-right: 0.5rem;
    }
    
    .deadline-type {
        font-size: 0.75rem;
        flex-shrink: 0;
    }
    
    .deadline-description {
        margin-bottom: 0.75rem;
        font-size: 0.875rem;
        color: #6c757d;
        line-height: 1.4;
    }
    
    .deadline-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .due-date {
        font-size: 0.875rem;
        color: #6c757d;
    }
    
    .show-more {
        text-align: center;
        padding-top: 1rem;
        border-top: 1px solid #e9ecef;
    }
    
    .no-deadlines {
        text-align: center;
        padding: 2rem 1rem;
        color: #6c757d;
    }
    
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    @@media (max-width: 768px) {
        .deadline-item {
            flex-direction: column;
            padding: 0.75rem;
        }
        
        .deadline-indicator {
            align-self: flex-start;
            margin-right: 0;
            margin-bottom: 1rem;
        }
        
        .days-until {
            width: 3rem;
            height: 3rem;
        }
        
        .days-number {
            font-size: 1rem;
        }
        
        .deadline-header {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .deadline-type {
            margin-top: 0.25rem;
        }
        
        .deadline-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
    }
</style>