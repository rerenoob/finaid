@using finaid.Models.Dashboard

@*
    Shows recent user activities and system events
*@

<div class="activity-feed">
    @if (Activities?.Any() == true)
    {
        <div class="activities-timeline">
            @foreach (var activity in Activities.OrderByDescending(a => a.Timestamp).Take(MaxItems))
            {
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="@activity.Icon @GetActivityIconClass(activity.Type)"></i>
                    </div>
                    
                    <div class="activity-content">
                        <div class="activity-header">
                            <h6 class="activity-title">@activity.Title</h6>
                            <span class="activity-time">@GetRelativeTime(activity.Timestamp)</span>
                        </div>
                        
                        <p class="activity-description">@activity.Description</p>
                        
                        @if (!string.IsNullOrEmpty(activity.ActionUrl))
                        {
                            <div class="activity-action">
                                <a href="@activity.ActionUrl" class="btn btn-sm btn-outline-primary">
                                    View Details <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        
        @if (Activities.Count > MaxItems)
        {
            <div class="show-more-activities">
                <a href="/activity" class="btn btn-link btn-sm">
                    View all activity <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        }
    }
    else
    {
        <div class="no-activity">
            <i class="bi bi-clock-history display-6 text-muted"></i>
            <h6 class="mt-2">No Recent Activity</h6>
            <p class="text-muted">Your activity history will appear here once you start using the application.</p>
        </div>
    }
</div>

@code {
    [Parameter] public List<RecentActivity>? Activities { get; set; }
    [Parameter] public int MaxItems { get; set; } = 8;
    
    private string GetActivityIconClass(ActivityType type)
    {
        return type switch
        {
            ActivityType.FormSubmitted => "text-success",
            ActivityType.DocumentUploaded => "text-primary",
            ActivityType.ApplicationStatusChanged => "text-info",
            ActivityType.DeadlineReminder => "text-warning",
            ActivityType.SystemNotification => "text-secondary",
            ActivityType.UserAction => "text-primary",
            _ => "text-secondary"
        };
    }
    
    private string GetRelativeTime(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        
        return timeSpan switch
        {
            { TotalSeconds: < 60 } => "just now",
            { TotalMinutes: < 60 } => $"{(int)timeSpan.TotalMinutes}m ago",
            { TotalHours: < 24 } => $"{(int)timeSpan.TotalHours}h ago",
            { TotalDays: < 7 } => $"{(int)timeSpan.TotalDays}d ago",
            { TotalDays: < 30 } => $"{(int)(timeSpan.TotalDays / 7)}w ago",
            _ => dateTime.ToString("MMM dd")
        };
    }
}

<style>
    .activities-timeline {
        position: relative;
    }
    
    .activities-timeline::before {
        content: '';
        position: absolute;
        left: 1.5rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, #e9ecef, transparent);
    }
    
    .activity-item {
        display: flex;
        margin-bottom: 1.5rem;
        position: relative;
    }
    
    .activity-item:last-child {
        margin-bottom: 0;
    }
    
    .activity-icon {
        flex-shrink: 0;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        background-color: #fff;
        border: 2px solid #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1rem;
        position: relative;
        z-index: 1;
    }
    
    .activity-content {
        flex-grow: 1;
        min-width: 0;
        padding-bottom: 0.5rem;
    }
    
    .activity-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }
    
    .activity-title {
        margin-bottom: 0;
        font-weight: 600;
        color: #495057;
        flex-grow: 1;
        margin-right: 1rem;
    }
    
    .activity-time {
        font-size: 0.875rem;
        color: #6c757d;
        white-space: nowrap;
        flex-shrink: 0;
    }
    
    .activity-description {
        margin-bottom: 0.75rem;
        color: #6c757d;
        font-size: 0.9rem;
        line-height: 1.4;
    }
    
    .activity-action {
        margin-top: 0.5rem;
    }
    
    .show-more-activities {
        text-align: center;
        padding-top: 1rem;
        border-top: 1px solid #e9ecef;
        margin-top: 1rem;
    }
    
    .no-activity {
        text-align: center;
        padding: 2rem 1rem;
        color: #6c757d;
    }
    
    /* Activity type specific styling */
    .activity-item:has(.text-success) .activity-icon {
        border-color: #198754;
        background-color: rgba(25, 135, 84, 0.1);
    }
    
    .activity-item:has(.text-primary) .activity-icon {
        border-color: #0d6efd;
        background-color: rgba(13, 110, 253, 0.1);
    }
    
    .activity-item:has(.text-info) .activity-icon {
        border-color: #0dcaf0;
        background-color: rgba(13, 202, 240, 0.1);
    }
    
    .activity-item:has(.text-warning) .activity-icon {
        border-color: #ffc107;
        background-color: rgba(255, 193, 7, 0.1);
    }
    
    .activity-item:has(.text-secondary) .activity-icon {
        border-color: #6c757d;
        background-color: rgba(108, 117, 125, 0.1);
    }
    
    @@media (max-width: 768px) {
        .activities-timeline::before {
            left: 1rem;
        }
        
        .activity-icon {
            width: 2.5rem;
            height: 2.5rem;
            margin-right: 0.75rem;
            font-size: 0.9rem;
        }
        
        .activity-header {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .activity-time {
            margin-top: 0.25rem;
            font-size: 0.8rem;
        }
        
        .activity-title {
            margin-right: 0;
            font-size: 0.95rem;
        }
        
        .activity-description {
            font-size: 0.875rem;
        }
    }
</style>