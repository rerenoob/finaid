@page "/calculator"

<PageTitle>EFC Calculator - FinAid Assistant</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <span class="bi bi-calculator me-2"></span>
                        Expected Family Contribution Calculator
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <span class="bi bi-info-circle me-2"></span>
                        This calculator helps estimate your Expected Family Contribution (EFC) for financial aid purposes.
                    </div>
                    
                    <p class="text-muted">EFC Calculator functionality coming soon. This will help you estimate your financial aid eligibility.</p>
                    
                    <div class="mt-4">
                        <a href="/fafsa" class="btn btn-primary me-2">
                            <span class="bi bi-arrow-left me-1"></span>
                            Back to FAFSA
                        </a>
                        <a href="/dashboard" class="btn btn-outline-secondary">
                            <span class="bi bi-house me-1"></span>
                            Return to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>