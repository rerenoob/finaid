@page "/fafsa"
@using finaid.Models.User
@using finaid.Services
@inject finaid.Services.AppStateService AppState

<PageTitle>FAFSA Application - FinAid Assistant</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h1 class="display-6 mb-2">
                    <i class="bi bi-file-earmark-text me-2"></i>
                    FAFSA Application
                </h1>
                <p class="lead text-muted">
                    Complete your Free Application for Federal Student Aid
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Application Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-lightbulb me-2"></i>
                        <strong>Tip:</strong> Use our AI-powered form assistant for faster completion!
                    </div>
                    
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">Completion</small>
                            <div class="fw-semibold">65% Complete</div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Deadline</small>
                            <div class="fw-semibold">June 30, 2026</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check me-2"></i>
                        Required Sections
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Student Information</h6>
                                    <small class="text-muted">Personal details and contact information</small>
                                </div>
                                <span class="badge bg-success">Completed</span>
                            </div>
                        </div>
                        
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">School Selection</h6>
                                    <small class="text-muted">Colleges and universities to receive your FAFSA</small>
                                </div>
                                <span class="badge bg-warning">In Progress</span>
                            </div>
                        </div>
                        
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Financial Information</h6>
                                    <small class="text-muted">Income, assets, and tax information</small>
                                </div>
                                <span class="badge bg-secondary">Not Started</span>
                            </div>
                        </div>
                        
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Review and Sign</h6>
                                    <small class="text-muted">Final review and electronic signature</small>
                                </div>
                                <span class="badge bg-secondary">Not Started</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/fafsa-ai" class="btn btn-primary">
                            <i class="bi bi-robot me-2"></i>
                            Continue with AI Assistant
                        </a>
                        
                        <button class="btn btn-outline-primary">
                            <i class="bi bi-download me-2"></i>
                            Download PDF Instructions
                        </button>
                        
                        <button class="btn btn-outline-secondary">
                            <i class="bi bi-question-circle me-2"></i>
                            Help Center
                        </button>
                        
                        <button class="btn btn-outline-secondary">
                            <i class="bi bi-calculator me-2"></i>
                            EFC Calculator
                        </button>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock me-2"></i>
                        Important Dates
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-0">FAFSA Opens</h6>
                                <small class="text-muted">October 1, 2025</small>
                            </div>
                        </div>
                        
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6 class="mb-0">Priority Deadline</h6>
                                <small class="text-muted">March 1, 2026</small>
                            </div>
                        </div>
                        
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger"></div>
                            <div class="timeline-content">
                                <h6 class="mb-0">Final Deadline</h6>
                                <small class="text-muted">June 30, 2026</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private User currentUser = new() 
    { 
        FirstName = "Test", 
        LastName = "User", 
        Email = "test.user@example.com" 
    };

    protected override void OnInitialized()
    {
        // Get current user from app state (mock data for now)
        currentUser = AppState.GetValue<User>(AppStateKeys.CurrentUser, currentUser);
    }
}

<style>
    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline-item:last-child {
        padding-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -2rem;
        top: 0.25rem;
        width: 1rem;
        height: 1rem;
        border-radius: 50%;
        border: 2px solid white;
        box-shadow: 0 0 0 2px var(--bs-primary);
    }

    .timeline-content {
        margin-left: 0.5rem;
    }

    .timeline-item:not(:last-child)::after {
        content: '';
        position: absolute;
        left: -1.5rem;
        top: 1.25rem;
        bottom: -0.5rem;
        width: 2px;
        background-color: var(--bs-border-color);
    }
</style>