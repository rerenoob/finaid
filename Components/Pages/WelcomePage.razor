@page "/welcome"

<div class="welcome-container">
    <div class="hero-section">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-primary mb-4">
                    <span class="bi bi-mortarboard-fill me-3"></span>
                    Welcome to FinAid Assistant
                </h1>
                <p class="lead mb-4">
                    Your intelligent companion for navigating the federal student aid process. 
                    Get personalized guidance, track your applications, and maximize your financial aid opportunities.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button class="btn btn-primary btn-lg px-4 me-md-2" @onclick="GetStarted">
                        <span class="bi bi-rocket-takeoff me-2"></span>
                        Get Started
                    </button>
                    <button class="btn btn-outline-primary btn-lg px-4">
                        <span class="bi bi-play-circle me-2"></span>
                        Watch Demo
                    </button>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="feature-preview">
                    <img src="/images/dashboard-preview.png" alt="Dashboard Preview" class="img-fluid rounded shadow" />
                </div>
            </div>
        </div>
    </div>

    <div class="features-section mt-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <span class="bi bi-file-earmark-text display-4 text-primary"></span>
                    </div>
                    <h3 class="h5 fw-bold">AI-Powered FAFSA</h3>
                    <p class="text-muted">
                        Complete your FAFSA with intelligent assistance that guides you through each step 
                        and helps avoid common mistakes.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <span class="bi bi-graph-up display-4 text-primary"></span>
                    </div>
                    <h3 class="h5 fw-bold">Real-time Tracking</h3>
                    <p class="text-muted">
                        Monitor your application progress, deadlines, and receive notifications 
                        about important updates and requirements.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <span class="bi bi-shield-check display-4 text-primary"></span>
                    </div>
                    <h3 class="h5 fw-bold">Secure & Compliant</h3>
                    <p class="text-muted">
                        Your personal and financial information is protected with bank-level security 
                        and full FERPA compliance.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="cta-section mt-5 text-center">
        <div class="card bg-light">
            <div class="card-body py-4">
                <h2 class="h4 mb-3">Ready to simplify your financial aid journey?</h2>
                <p class="mb-4">Join thousands of students who have already streamlined their FAFSA process.</p>
                <button class="btn btn-success btn-lg" @onclick="GetStarted">
                    <span class="bi bi-person-plus me-2"></span>
                    Create Account
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .welcome-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }
    
    .hero-section {
        padding: 3rem 0;
    }
    
    .feature-card {
        padding: 2rem 1rem;
        height: 100%;
        transition: transform 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
    }
    
    .feature-icon {
        opacity: 0.8;
    }
    
    .feature-preview img {
        max-height: 400px;
        object-fit: contain;
    }
    
    .cta-section {
        margin-top: 4rem;
    }
</style>

