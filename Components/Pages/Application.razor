@page "/application"
@inject NavigationManager Navigation

<PageTitle>FAFSA Application - Financial Aid Assistant</PageTitle>

<div class="bg-white p-6 md:p-8 rounded-xl shadow-md">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-3xl font-bold">2025-2026 FAFSA Application</h2>
            <p class="text-gray-600">We've pre-filled what we can. Please review and complete the rest.</p>
        </div>
        <button @onclick="NavigateToDashboard" 
                class="text-gray-500 hover:text-gray-800">
            <i class="fas fa-times fa-lg"></i>
        </button>
    </div>

    <!-- Progress Bar -->
    <div class="mb-6">
        <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
                <div><span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200">35% Complete</span></div>
            </div>
            <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-200">
                <div style="width:35%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"></div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <EditForm Model="@FormData" OnValidSubmit="@HandleValidSubmit">
        <div class="space-y-6">
            <fieldset class="border p-4 rounded-lg">
                <legend class="px-2 font-bold text-lg">Student Information</legend>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-2">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Full Name</label>
                        <input type="text" @bind="FormData.FullName" 
                               class="mt-1 block w-full p-2 border border-gray-300 rounded-md bg-gray-100" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Date of Birth</label>
                        <input type="text" @bind="FormData.DateOfBirth" 
                               class="mt-1 block w-full p-2 border border-gray-300 rounded-md bg-gray-100" readonly>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Social Security Number</label>
                        <input type="text" @bind="FormData.SSN" placeholder="***-**-****" 
                               class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                    </div>
                     <div>
                        <label class="block text-sm font-medium text-gray-700">Email Address</label>
                        <input type="email" @bind="FormData.Email" 
                               class="mt-1 block w-full p-2 border border-gray-300 rounded-md bg-gray-100" readonly>
                    </div>
                </div>
            </fieldset>

             <fieldset class="border p-4 rounded-lg">
                <legend class="px-2 font-bold text-lg">Parental Information</legend>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-2">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Parent 1: Full Name</label>
                        <input type="text" @bind="FormData.Parent1Name" placeholder="Enter full name" 
                               class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Parent 1: 2024 AGI</label>
                        <input type="text" @bind="FormData.Parent1AGI" placeholder="Adjusted Gross Income" 
                               class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                        <p class="text-xs text-blue-600 mt-1">Need help finding this? <a href="#" class="underline">Click here.</a></p>
                    </div>
                </div>
            </fieldset>

            <div class="flex justify-end gap-4 pt-4">
                <button type="button" class="bg-gray-200 text-gray-800 font-semibold px-6 py-2 rounded-lg hover:bg-gray-300">
                    Save & Exit
                </button>
                <button type="submit" class="bg-blue-500 text-white font-semibold px-6 py-2 rounded-lg hover:bg-blue-600">
                    Review & Submit
                </button>
            </div>
        </div>
    </EditForm>
</div>

@code {
    private FAFSAFormModel FormData = new()
    {
        FullName = "Emily Carter",
        DateOfBirth = "08/15/2007",
        Email = "emily.c@email.com"
    };

    private void HandleValidSubmit()
    {
        // Navigate to award comparison page
        Navigation.NavigateTo("/award");
    }

    private void NavigateToDashboard()
    {
        Navigation.NavigateTo("/dashboard");
    }

    public class FAFSAFormModel
    {
        public string FullName { get; set; } = "";
        public string DateOfBirth { get; set; } = "";
        public string SSN { get; set; } = "";
        public string Email { get; set; } = "";
        public string Parent1Name { get; set; } = "";
        public string Parent1AGI { get; set; } = "";
    }
}