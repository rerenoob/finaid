@page "/award"
@inject NavigationManager Navigation

<PageTitle>Compare Aid Offers - Financial Aid Assistant</PageTitle>

<div class="bg-white p-6 md:p-8 rounded-xl shadow-md">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-3xl font-bold">Compare Your Aid Offers</h2>
            <p class="text-gray-600">Here's a breakdown of your estimated awards. More will appear as they come in.</p>
        </div>
         <button @onclick="NavigateToDashboard" 
                 class="bg-blue-500 text-white font-semibold px-6 py-2 rounded-lg hover:bg-blue-600">
            Back to Dashboard
         </button>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-100">
                    <th class="p-4 font-bold uppercase text-gray-600 text-sm border-b">Institution</th>
                    <th class="p-4 font-bold uppercase text-gray-600 text-sm border-b">Grants & Scholarships</th>
                    <th class="p-4 font-bold uppercase text-gray-600 text-sm border-b">Federal Loans</th>
                    <th class="p-4 font-bold uppercase text-gray-600 text-sm border-b">Work-Study</th>
                    <th class="p-4 font-bold uppercase text-gray-600 text-sm border-b">Total Aid</th>
                    <th class="p-4 font-bold uppercase text-gray-600 text-sm border-b">Net Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var award in AwardOffers)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="p-4 border-b font-semibold">@award.Institution</td>
                        <td class="p-4 border-b text-green-600">@award.GrantsScholarships.ToString("C0")</td>
                        <td class="p-4 border-b">@award.FederalLoans.ToString("C0")</td>
                        <td class="p-4 border-b">@award.WorkStudy.ToString("C0")</td>
                        <td class="p-4 border-b font-semibold">@award.TotalAid.ToString("C0")</td>
                        <td class="p-4 border-b font-bold text-blue-600">@award.NetCost.ToString("C0") / year</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<AwardOffer> AwardOffers = new()
    {
        new AwardOffer
        {
            Institution = "State University",
            GrantsScholarships = 12500,
            FederalLoans = 5500,
            WorkStudy = 3000,
            TotalAid = 21000,
            NetCost = 4000
        },
        new AwardOffer
        {
            Institution = "Private College",
            GrantsScholarships = 35000,
            FederalLoans = 5500,
            WorkStudy = 2500,
            TotalAid = 43000,
            NetCost = 12000
        },
        new AwardOffer
        {
            Institution = "Community College",
            GrantsScholarships = 6000,
            FederalLoans = 2000,
            WorkStudy = 0,
            TotalAid = 8000,
            NetCost = 500
        }
    };

    private void NavigateToDashboard()
    {
        Navigation.NavigateTo("/dashboard");
    }

    public class AwardOffer
    {
        public string Institution { get; set; } = "";
        public decimal GrantsScholarships { get; set; }
        public decimal FederalLoans { get; set; }
        public decimal WorkStudy { get; set; }
        public decimal TotalAid { get; set; }
        public decimal NetCost { get; set; }
    }
}