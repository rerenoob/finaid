@page "/deadlines"

<PageTitle>Important Deadlines - FinAid Assistant</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <span class="bi bi-calendar-event me-2"></span>
                        Important Financial Aid Deadlines
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <span class="bi bi-exclamation-triangle me-2"></span>
                        Missing deadlines can affect your financial aid eligibility. Stay on track!
                    </div>
                    
                    <p class="text-muted">Deadlines management functionality coming soon. This will help you track all important financial aid deadlines.</p>
                    
                    <div class="mt-4">
                        <a href="/progress" class="btn btn-primary me-2">
                            <span class="bi bi-percent me-1"></span>
                            View Application Progress
                        </a>
                        <a href="/dashboard" class="btn btn-outline-secondary">
                            <span class="bi bi-house me-1"></span>
                            Return to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>