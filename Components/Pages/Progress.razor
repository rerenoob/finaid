@page "/progress"
@using finaid.Models.User
@using finaid.Services
@inject finaid.Services.AppStateService AppState

<PageTitle>Application Progress - FinAid Assistant</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h1 class="display-6 mb-2">
                    <i class="bi bi-percent me-2"></i>
                    Application Progress
                </h1>
                <p class="lead text-muted">
                    Track your financial aid application status and completion
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- FAFSA Progress Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            FAFSA Application
                        </h5>
                        <span class="badge bg-warning">65% Complete</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">Status</small>
                            <div class="fw-semibold">In Progress</div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Last Updated</small>
                            <div class="fw-semibold">2 days ago</div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <h6 class="mb-2">Next Steps:</h6>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-arrow-right text-primary me-2"></i>Complete financial information section</li>
                            <li><i class="bi bi-arrow-right text-primary me-2"></i>Upload required tax documents</li>
                            <li><i class="bi bi-arrow-right text-primary me-2"></i>Review and submit application</li>
                        </ul>
                    </div>
                    
                    <div class="d-grid mt-3">
                        <a href="/fafsa" class="btn btn-primary">
                            <i class="bi bi-arrow-right me-2"></i>
                            Continue FAFSA
                        </a>
                    </div>
                </div>
            </div>

            <!-- State Aid Progress Card -->
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-building me-2"></i>
                            State Grant Application
                        </h5>
                        <span class="badge bg-secondary">Not Started</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-secondary" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Complete your FAFSA first to automatically populate state application data.
                    </div>
                    
                    <div class="d-grid">
                        <button class="btn btn-outline-secondary" disabled>
                            <i class="bi bi-lock me-2"></i>
                            Start After FAFSA Completion
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Overall Progress Summary -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Overall Progress
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="progress-circle mb-3 mx-auto" style="width: 120px; height: 120px;">
                        <div class="progress-circle-value">65%</div>
                    </div>
                    
                    <h4 class="text-primary mb-2">Good Progress!</h4>
                    <p class="text-muted mb-3">You're more than halfway through your financial aid applications.</p>
                    
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-number text-primary">1</div>
                            <div class="stat-label">Active</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number text-success">0</div>
                            <div class="stat-label">Completed</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number text-secondary">1</div>
                            <div class="stat-label">Pending</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Deadlines Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-event me-2"></i>
                        Upcoming Deadlines
                    </h5>
                </div>
                <div class="card-body">
                    <div class="deadline-item">
                        <div class="deadline-date text-danger">
                            <div class="deadline-day">15</div>
                            <div class="deadline-month">Days</div>
                        </div>
                        <div class="deadline-info">
                            <h6 class="mb-0">FAFSA Submission</h6>
                            <small class="text-muted">Complete and submit application</small>
                        </div>
                    </div>
                    
                    <div class="deadline-item mt-3">
                        <div class="deadline-date text-warning">
                            <div class="deadline-day">7</div>
                            <div class="deadline-month">Days</div>
                        </div>
                        <div class="deadline-info">
                            <h6 class="mb-0">Document Upload</h6>
                            <small class="text-muted">Upload required tax documents</small>
                        </div>
                    </div>
                    
                    <div class="text-center mt-3">
                        <a href="/dashboard" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye me-1"></i>
                            View All Deadlines
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

