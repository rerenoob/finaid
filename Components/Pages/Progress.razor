<style>
    .progress-circle {
        position: relative;
        border-radius: 50%;
        background: conic-gradient(var(--bs-primary) 65%, var(--bs-light) 0);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .progress-circle-value {
        position: absolute;
        background: white;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--bs-primary);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-top: 1rem;
    }

    .stat-item {
        text-align: center;
        padding: 0.5rem;
        background: var(--bs-gray-100);
        border-radius: 0.5rem;
    }

    .stat-number {
        font-size: 1.5rem;
        font-weight: bold;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--bs-gray-600);
        margin-top: 0.25rem;
    }

    .deadline-item {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .deadline-date {
        text-align: center;
        min-width: 60px;
    }

    .deadline-day {
        font-size: 1.5rem;
        font-weight: bold;
        line-height: 1;
    }

    .deadline-month {
        font-size: 0.8rem;
        text-transform: uppercase;
        font-weight: 600;
    }

    .deadline-info {
        flex: 1;
    }

    .deadline-info h6 {
        font-size: 0.9rem;
    }

    .deadline-info small {
        font-size: 0.8rem;
    }
</style>