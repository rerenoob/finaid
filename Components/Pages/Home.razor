@page "/"

<PageTitle>Dashboard - FinAid Assistant</PageTitle>

<div class="dashboard-container">
    <div class="welcome-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-6 mb-2">Good morning! 👋</h1>
                <p class="lead text-muted">Let's continue working on your financial aid journey.</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="quick-stats">
                    <div class="stat-item">
                        <small class="text-muted d-block">Application Progress</small>
                        <span class="h4 text-primary">65%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Current Application Status -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <span class="bi bi-file-earmark-text me-2"></span>
                        Current FAFSA Application
                    </h5>
                    <span class="badge bg-warning">In Progress</span>
                </div>
                <div class="card-body">
                    <div class="progress mb-3" style="height: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <p class="card-text">2025-2026 Award Year Application</p>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Deadline</small>
                            <div class="fw-semibold">June 30, 2026</div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Last Updated</small>
                            <div class="fw-semibold">2 days ago</div>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex">
                        <button class="btn btn-primary">
                            <span class="bi bi-arrow-right me-1"></span>
                            Continue Application
                        </button>
                        <button class="btn btn-outline-secondary">
                            <span class="bi bi-eye me-1"></span>
                            Review Progress
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <span class="bi bi-lightning me-2"></span>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary">
                            <span class="bi bi-upload me-2"></span>
                            Upload Document
                        </button>
                        <button class="btn btn-outline-primary">
                            <span class="bi bi-calculator me-2"></span>
                            EFC Calculator
                        </button>
                        <button class="btn btn-outline-primary">
                            <span class="bi bi-question-circle me-2"></span>
                            Get Help
                        </button>
                        <button class="btn btn-outline-primary">
                            <span class="bi bi-calendar-event me-2"></span>
                            Important Dates
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .quick-stats {
        text-align: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 0.5rem;
    }
    
    .card {
        transition: box-shadow 0.3s ease;
    }
    
    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }
</style>
